{% doc %}
  @prompt
    marquee, include more options to speed it up more
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.item_spacing }}px;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.speed }}s linear infinite;
    will-change: transform;
  }

  .ai-marquee-{{ ai_gen_id }}:hover .ai-marquee-track-{{ ai_gen_id }} {
    {% if block.settings.pause_on_hover %}
      animation-play-state: paused;
    {% endif %}
  }

  .ai-marquee-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_text_spacing }}px;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .ai-marquee-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
  }

  .ai-marquee-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: {{ block.settings.text_weight }};
    text-transform: {{ block.settings.text_transform }};
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-marquee-track-{{ ai_gen_id }} {
      animation: none;
    }
  }
{% endstyle %}

<div class="ai-marquee-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-marquee-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      {% if block.settings.text_1 != blank %}
